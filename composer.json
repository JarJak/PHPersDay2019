{
    "require": {
        "phpspec/phpspec": "^5.1",
        "behat/behat": "^3.5",
        "symfony/flex": "^1.2",
        "sensio/framework-extra-bundle": "^5.2",
        "symfony/orm-pack": "^1.0",
        "symfony/validator": "^4.2",
        "symfony/serializer-pack": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Library\\": "src/",
            "spec\\Library\\": "tests/spec"
        }
